<%= if obj.errors.any? %>
<div class="card">
  <div class="card-header">
    <%= pluralize(obj.errors.count, "error") %>
    prohibited the record from being saved:
  </div>
  <div class="card-body">
    <p class="card-text">
        <ul>
            <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </p>
  </div>
</div>
<% end %>